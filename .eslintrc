{
  "root": true,
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "worker": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "generators": true,
      "classes": true,
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "objectLiteralDuplicateProperties": false
    }
  },
  "globals": {
    "$": true,
    "jQuery": true
  },
  "rules": {
    "no-debugger": 0,
    "no-console": 0,
    "no-alert": 0,
    "no-tabs": 0,
    "no-var": 0,
    "no-empty": 1,
    "no-undef": 1,
    "no-shadow": 0,
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-unused-vars": 0,
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "ignore",
        "named": "ignore",
        "asyncArrow": "ignore"
      }
    ],
    "func-names": 1,
    "quotes": [
      "error",
      "double"
    ],
    "indent": 0,
    "prefer-template": 1,
    "semi": [
      1,
      "always"
    ],
    "padded-blocks": [
      "error",
      "never"
    ],
    "no-use-before-define": [
      1,
      {
        "functions": false,
        "classes": true
      }
    ],
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "prefer-arrow-callback": [
      1,
      {
        "allowNamedFunctions": false,
        "allowUnboundThis": false
      }
    ]
  }
}
